  atualizado_em DateTime @updatedAt @db.Timestamp

  id_relatorio_pia_resposta BigInt               @db.BigInt
  relatorio_pia_resposta    RelatorioPiaResposta @relation(fields: [id_relatorio_pia_resposta], references: [id])

