datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id            BigInt   @id @default(autoincrement()) @db.BigInt
  uid           String   @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at    DateTime @default(now()) @db.Timestamp
  updated_at    DateTime @updatedAt @db.Timestamp
  is_admin      Boolean  @default(false) @db.Boolean
  primeiro_nome String   @db.VarChar(255)
  nome_completo String   @db.VarChar(255)
  email         String   @db.VarChar(255)
  senha         String   @db.VarChar(511)
  telefone      String   @db.VarChar(255)
  situacao      String   @default("ATIVO") @db.VarChar(255) // ATIVO, INATIVO

  @@map("usuario")
}
